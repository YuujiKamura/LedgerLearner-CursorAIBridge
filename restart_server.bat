cd /d "%~dp0"
echo 作業ディレクトリ: %cd%

echo ポート3000のプロセスを確認しています...
netstat -ano | findstr :3000 | findstr LISTENING

echo 5秒待機しています...
timeout /t 5 /nobreak > nul

echo サーバーを起動します...
npm start

